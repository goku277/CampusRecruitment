<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main.AddUniversityDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:padding="25dp"
           android:layout_gravity="center_vertical">

           <ImageView
               android:id="@+id/university_logo_id"
               android:layout_width="122dp"
               android:layout_height="108dp"
               android:src="@drawable/photo"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent" />

           <Button
               android:id="@+id/upload_university_logo_id"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="40dp"
               android:layout_marginLeft="40dp"
               android:text="Upload UNiversity Logo"
               android:background="#FF5722"
               android:textColor="#ffffff"
               app:layout_constraintBottom_toBottomOf="@+id/university_logo_id"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toEndOf="@+id/university_logo_id"
               app:layout_constraintTop_toTopOf="@+id/university_logo_id" />

           <EditText
               android:id="@+id/university_name_id"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="32dp"
               android:fontFamily="cursive"
               android:hint="University Name"
               android:textColor="#000"
               android:textStyle="bold"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/university_logo_id" />

           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/location_id"
               android:hint="Location"
               android:layout_marginTop="24dp"
               android:textColor="#000"
               android:textStyle="bold"
               android:fontFamily="cursive"
               app:layout_constraintTop_toBottomOf="@+id/university_name_id"/>

           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/university_id"
               android:hint="University Id"
               android:layout_marginTop="24dp"
               android:textColor="#000"
               android:textStyle="bold"
               android:fontFamily="cursive"
               app:layout_constraintTop_toBottomOf="@+id/location_id"/>

           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/branches_available_id"
               android:hint="Branches Available"
               android:textColor="#000"
               android:textStyle="bold"
               android:layout_marginTop="24dp"
               android:fontFamily="cursive"
               app:layout_constraintTop_toBottomOf="@+id/university_id" />

           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/year_of_establishment_id"
               android:hint="Year of Establishment"
               android:textColor="#000"
               android:inputType="number"
               android:textStyle="bold"
               android:layout_marginTop="24dp"
               android:fontFamily="cursive"
               app:layout_constraintTop_toBottomOf="@+id/branches_available_id"/>

           <Button
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/upload_data_id"
               android:text="Upload Details"
               android:background="#FF5722"
               android:layout_marginTop="24dp"
               android:textColor="#ffffff"
               app:layout_constraintTop_toBottomOf="@+id/year_of_establishment_id"/>

       </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>