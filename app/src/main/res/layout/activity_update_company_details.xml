<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main.UpdateCompanyDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-26dp"
        tools:layout_editor_absoluteY="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="25dp">

            <TextView
                android:id="@+id/company_name_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:text=""
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/year_of_establishment_id"
                android:layout_width="192dp"
                android:layout_height="55dp"
                android:layout_marginTop="24dp"
                android:fontFamily="cursive"
                android:text="Year Of Establishment"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/company_name_id"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/textView18"
                app:layout_constraintTop_toBottomOf="@+id/company_name_id" />

            <EditText
                android:id="@+id/location_id"
                android:layout_width="190dp"
                android:layout_height="59dp"
                android:layout_marginTop="12dp"
                android:fontFamily="cursive"
                android:text="Location"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/year_of_establishment_id"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/textView19"
                app:layout_constraintTop_toBottomOf="@+id/year_of_establishment_id" />

            <EditText
                android:id="@+id/total_id"
                android:layout_width="188dp"
                android:layout_height="53dp"
                android:layout_marginTop="20dp"
                android:fontFamily="cursive"
                android:text="Total"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/location_id"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/textView20"
                app:layout_constraintTop_toBottomOf="@+id/location_id" />

            <EditText
                android:id="@+id/achievements_id"
                android:layout_width="184dp"
                android:layout_height="46dp"
                android:layout_marginTop="24dp"
                android:fontFamily="cursive"
                android:text="Achievents"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/total_id"
                app:layout_constraintHorizontal_bias="0.945"
                app:layout_constraintStart_toEndOf="@+id/textView21"
                app:layout_constraintTop_toBottomOf="@+id/total_id" />

            <ImageView
                android:id="@+id/cig_id"
                android:layout_width="122dp"
                android:layout_height="96dp"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="36dp"
                android:src="@drawable/camera"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView21" />

            <Button
                android:id="@+id/change_logo_id"
                android:layout_width="182dp"
                android:layout_height="38dp"
                android:layout_marginTop="40dp"
                android:background="#F57C00"
                android:fontFamily="cursive"
                android:text="Change Logo"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.794"
                app:layout_constraintStart_toEndOf="@+id/cig_id"
                app:layout_constraintTop_toBottomOf="@+id/achievements_id" />

            <Button
                android:id="@+id/update_data_id"
                android:layout_width="367dp"
                android:layout_height="32dp"
                android:layout_marginTop="28dp"
                android:background="#F57C00"
                android:fontFamily="cursive"
                android:text="Update"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.449"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cig_id" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="78dp"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:text="YOE"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="@+id/company_name_id"
                app:layout_constraintTop_toTopOf="@+id/year_of_establishment_id"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="32dp"
                android:text="Location"
                app:layout_constraintStart_toStartOf="@+id/textView18"
                app:layout_constraintTop_toBottomOf="@+id/year_of_establishment_id" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                app:layout_constraintStart_toStartOf="@+id/textView19"
                app:layout_constraintTop_toTopOf="@+id/total_id" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acheivements"
                app:layout_constraintStart_toStartOf="@+id/textView20"
                app:layout_constraintTop_toTopOf="@+id/achievements_id" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>