<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="7dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="7dp">

            <TextView
                android:id="@+id/selected_companies_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:text="Selected Companies"
                android:textSize="15sp"
                android:textStyle="normal"
                android:textAlignment="textEnd"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="end" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/registration_number_id"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:text="Registration number"
                android:fontFamily="cursive"
                app:layout_constraintTop_toBottomOf="@+id/selected_companies_id"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ten_percentage_id"
                android:text="Tenth Percentage"
                android:layout_marginTop="12dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="cursive"
                app:layout_constraintTop_toBottomOf="@+id/registration_number_id"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/twelve_percentage_id"
                android:text="Twelvth Percentage"
                android:layout_marginTop="12dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="cursive"
                app:layout_constraintTop_toBottomOf="@+id/ten_percentage_id"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/graduation_percentage_id"
                android:layout_marginTop="12dp"
                android:text="Graduation percentage"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="cursive"
                app:layout_constraintTop_toBottomOf="@+id/twelve_percentage_id"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/current_academic_id"
                android:text="Current Academic"
                android:layout_marginTop="12dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:fontFamily="cursive"
                app:layout_constraintTop_toBottomOf="@+id/graduation_percentage_id"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/key_skills_id"
                android:text="Keyskills"
                android:layout_marginTop="12dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="cursive"
                app:layout_constraintTop_toBottomOf="@+id/current_academic_id"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>