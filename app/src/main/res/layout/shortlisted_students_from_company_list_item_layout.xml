<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="2dp"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="25dp">

            <ImageView
                android:id="@+id/cig_id"
                android:layout_width="104dp"
                android:layout_height="104dp"
                android:src="@drawable/company"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/university_name_id"
                android:layout_width="227dp"
                android:layout_height="52dp"
                android:layout_marginTop="4dp"
                android:fontFamily="cursive"
                android:gravity="center_horizontal"
                android:text="University Name"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/cig_id"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/view_btn_id"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded_buttons"
                android:text="View"
                android:textColor="#ffffff"
                app:layout_constraintEnd_toEndOf="@+id/university_name_id"
                app:layout_constraintHorizontal_bias="0.577"
                app:layout_constraintStart_toEndOf="@+id/cig_id"
                app:layout_constraintTop_toBottomOf="@+id/university_name_id" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>