<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".Credentials.Signup">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/logo_id"
        android:layout_width="84dp"
        android:layout_height="68dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/recruitment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/username_id"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_edittexts"
            android:hint="Username"
            android:inputType="textEmailAddress"
            android:padding="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/role_spinner_id" />

        <EditText
            android:id="@+id/email_id"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_edittexts"
            android:hint="Email id"
            android:inputType="textEmailAddress"
            android:padding="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/username_id" />


        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/role_spinner_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/logo_id"
            tools:layout_editor_absoluteX="0dp" />

        <EditText
            android:id="@+id/name111_id"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_edittexts"
            android:hint="University/Company   Name"
            android:padding="4dp"
            app:layout_constraintTop_toBottomOf="@+id/email_id"
            tools:layout_editor_absoluteX="16dp" />

        <EditText
            android:id="@+id/address111_id"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_edittexts"
            android:hint="Uiversity/Company   Address"
            android:padding="4dp"
            app:layout_constraintTop_toBottomOf="@+id/name111_id"
            tools:layout_editor_absoluteX="16dp" />

        <EditText
            android:id="@+id/phone_id"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/rounded_edittexts"
            android:hint="University/Company   Contact Number"
            android:inputType="phone"
            android:padding="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/address111_id" />


        <EditText
            android:id="@+id/password_id"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_edittexts"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="4dp"
            app:layout_constraintTop_toBottomOf="@+id/phone_id"
            tools:layout_editor_absoluteX="0dp" />

        <EditText
            android:id="@+id/cnf_password_id"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_edittexts"
            android:hint="Confirm password"
            android:inputType="textPassword"
            android:padding="4dp"
            app:layout_constraintTop_toBottomOf="@+id/password_id"
            tools:layout_editor_absoluteX="16dp" />


        <Button
            android:id="@+id/signin_btn_id"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_buttons"
            android:text="Signup"
            android:textColor="#ffffff"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/empty_text_id"
            app:layout_constraintTop_toBottomOf="@+id/cnf_password_id" />

        <TextView
            android:id="@+id/create_account_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Already Created an Account?"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintHorizontal_bias="0.709"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signin_btn_id" />

        <TextView
            android:id="@+id/create_new_one_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to signin"
            android:textColor="#03A9F4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.281"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toTopOf="@+id/create_account_id" />

        <TextView
            android:id="@+id/empty_text_id"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@+id/create_new_one_id"
            tools:layout_editor_absoluteX="34dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.62" />




    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>