                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ScrollView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                            <ImageView
                                android:id="@+id/img_id"
                                android:layout_width="159dp"
                                android:layout_height="294dp"
                                android:src="@drawable/chair"
                                app:layout_constraintBottom_toTopOf="@+id/expected_ctc_id"
                                app:layout_constraintEnd_toStartOf="@+id/keyskills_id"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.303" />

                            <TextView
                                android:id="@+id/req_text_id"
                                android:layout_width="162dp"
                                android:layout_height="38dp"
                                android:layout_marginTop="8dp"
                                android:gravity="end"
                                android:text="Requirements"
                                android:textAlignment="viewEnd"
                                android:textColor="#FFA000"
                                android:textSize="25sp"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.789"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/requirements_id"
                                android:layout_width="146dp"
                                android:layout_height="55dp"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/annie_use_your_telescope"
                                android:text="Requirements"
                                android:textColor="#00796B"
                                android:textSize="18sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="1.0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/req_text_id" />

                            <TextView
                                android:id="@+id/currentacademic_id"
                                android:layout_width="134dp"
                                android:layout_height="52dp"
                                android:layout_marginTop="12dp"
                                android:fontFamily="@font/annie_use_your_telescope"
                                android:text="Current Academic:"
                                android:textColor="#00796B"
                                android:textSize="18sp"
                                app:layout_constraintEnd_toEndOf="@+id/requirements_id"
                                app:layout_constraintStart_toStartOf="@+id/requirements_id"
                                app:layout_constraintTop_toBottomOf="@+id/requirements_id" />

                            <TextView
                                android:id="@+id/grad_id"
                                android:layout_width="140dp"
                                android:layout_height="46dp"
                                android:layout_marginTop="12dp"
                                android:fontFamily="@font/annie_use_your_telescope"
                                android:text="Grad"
                                android:textColor="#00796B"
                                android:textSize="18sp"
                                app:layout_constraintEnd_toEndOf="@+id/currentacademic_id"
                                app:layout_constraintStart_toStartOf="@+id/currentacademic_id"
                                app:layout_constraintTop_toBottomOf="@+id/currentacademic_id" />

                            <TextView
                                android:id="@+id/keyskills_id"
                                android:layout_width="137dp"
                                android:layout_height="68dp"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/annie_use_your_telescope"
                                android:text="Key Skills:"
                                android:textColor="#00796B"
                                android:textSize="18sp"
                                app:layout_constraintEnd_toEndOf="@+id/grad_id"
                                app:layout_constraintHorizontal_bias="0.722"
                                app:layout_constraintStart_toStartOf="@+id/grad_id"
                                app:layout_constraintTop_toBottomOf="@+id/grad_id" />

                            <TextView
                                android:id="@+id/qualification_id"
                                android:layout_width="132dp"
                                android:layout_height="75dp"
                                android:layout_marginTop="12dp"
                                android:fontFamily="@font/annie_use_your_telescope"
                                android:text="Qualification:"
                                android:textColor="#00796B"
                                android:textSize="18sp"
                                app:layout_constraintEnd_toEndOf="@+id/keyskills_id"
                                app:layout_constraintStart_toStartOf="@+id/keyskills_id"
                                app:layout_constraintTop_toBottomOf="@+id/keyskills_id" />

                            <TextView
                                android:id="@+id/tenth_id"
                                android:layout_width="137dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="12dp"
                                android:fontFamily="@font/annie_use_your_telescope"
                                android:text="Tenth:"
                                android:textColor="#00796B"
                                android:textSize="18sp"
                                app:layout_constraintEnd_toEndOf="@+id/qualification_id"
                                app:layout_constraintHorizontal_bias="0.4"
                                app:layout_constraintStart_toStartOf="@+id/qualification_id"
                                app:layout_constraintTop_toBottomOf="@+id/qualification_id" />

                            <TextView
                                android:id="@+id/twelvth_id"
                                android:layout_width="136dp"
                                android:layout_height="50dp"
                                android:fontFamily="@font/annie_use_your_telescope"
                                android:text="Twelvth:"
                                android:textColor="#00796B"
                                android:textSize="18sp"
                                app:layout_constraintEnd_toEndOf="@+id/img_id"
                                app:layout_constraintStart_toStartOf="@+id/img_id"
                                app:layout_constraintTop_toTopOf="@+id/qualification_id" />

                            <TextView
                                android:id="@+id/expected_ctc_id"
                                android:layout_width="141dp"
                                android:layout_height="57dp"
                                android:fontFamily="@font/annie_use_your_telescope"
                                android:text="Expected CTC"
                                android:textColor="#00796B"
                                android:textSize="18sp"
                                app:layout_constraintEnd_toEndOf="@+id/twelvth_id"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="@+id/twelvth_id"
                                app:layout_constraintTop_toBottomOf="@+id/twelvth_id" />

                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </ScrollView>


                </androidx.constraintlayout.widget.ConstraintLayout>


         <!--   </ScrollView>   -->

     <!--   </androidx.constraintlayout.widget.ConstraintLayout>   -->

   <!-- </androidx.cardview.widget.CardView>   -->

</androidx.constraintlayout.widget.ConstraintLayout>