<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/univ_name_text_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main.UpdateUniversityDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:padding="25dp">

            <ImageView
                android:id="@+id/university_logo_id"
                android:layout_width="122dp"
                android:layout_height="108dp"
                android:src="@drawable/photo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/upload_university_logo_id"
                android:layout_width="155dp"
                android:layout_height="59dp"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                android:background="#FF5722"
                android:text="Change University Logo"
                android:textColor="#ffffff"
                app:layout_constraintBottom_toBottomOf="@+id/university_logo_id"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/university_logo_id"
                app:layout_constraintTop_toTopOf="@+id/university_logo_id"
                app:layout_constraintVertical_bias="0.482" />

            <TextView
                android:id="@+id/university_name_id"
                android:layout_width="182dp"
                android:layout_height="44dp"
                android:layout_marginTop="44dp"
                android:fontFamily="cursive"
                android:hint="University Name"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.905"
                app:layout_constraintStart_toEndOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/university_logo_id" />

            <EditText
                android:id="@+id/location_id"
                android:layout_width="184dp"
                android:layout_height="52dp"
                android:layout_marginTop="12dp"
                android:fontFamily="cursive"
                android:hint="Location"
                android:textColor="#000"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/university_name_id"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/university_name_id"
                app:layout_constraintTop_toBottomOf="@+id/university_name_id" />

            <TextView
                android:id="@+id/university_id"
                android:layout_width="186dp"
                android:layout_height="38dp"
                android:layout_marginTop="32dp"
                android:fontFamily="cursive"
                android:hint="University Id"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/location_id"
                app:layout_constraintTop_toBottomOf="@+id/location_id" />

            <EditText
                android:id="@+id/branches_available_id"
                android:layout_width="183dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:fontFamily="cursive"
                android:hint="Branches Available"
                android:textColor="#000"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/university_id"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/university_id"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <EditText
                android:id="@+id/year_of_establishment_id"
                android:layout_width="184dp"
                android:layout_height="43dp"
                android:layout_marginTop="28dp"
                android:fontFamily="cursive"
                android:hint="Year of Establishment"
                android:inputType="number"
                android:textColor="#000"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/branches_available_id"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/branches_available_id"
                app:layout_constraintTop_toBottomOf="@+id/branches_available_id" />

            <Button
                android:id="@+id/upload_data_id"
                android:layout_width="325dp"
                android:layout_height="33dp"
                android:layout_marginTop="24dp"
                android:background="#FF5722"
                android:text="Update Details"
                android:textColor="#ffffff"
                app:layout_constraintEnd_toEndOf="@+id/year_of_establishment_id"
                app:layout_constraintStart_toStartOf="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/year_of_establishment_id" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="95dp"
                android:layout_height="38dp"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="44dp"
                android:gravity="center_horizontal"
                android:text="University Name"
                android:textAlignment="center"
                android:textColor="#000"
                app:layout_constraintStart_toStartOf="@+id/university_logo_id"
                app:layout_constraintTop_toBottomOf="@+id/university_logo_id" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="89dp"
                android:layout_height="35dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="36dp"
                android:gravity="center_horizontal"
                android:text="University Location"
                android:textAlignment="center"
                android:textColor="#000"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="90dp"
                android:layout_height="27dp"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="8dp"
                android:text="University Id"
                android:textColor="#000"
                app:layout_constraintStart_toStartOf="@+id/textView3"
                app:layout_constraintTop_toTopOf="@+id/university_id" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:gravity="center_horizontal"
                android:text="Branches Available"
                android:textAlignment="center"
                android:textColor="#000"
                app:layout_constraintStart_toStartOf="@+id/textView4"
                app:layout_constraintTop_toTopOf="@+id/branches_available_id" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="72dp"
                android:layout_height="29dp"
                android:gravity="center_horizontal"
                android:text="YOE"
                android:textAlignment="center"
                android:textColor="#000"
                app:layout_constraintStart_toStartOf="@+id/textView5"
                app:layout_constraintTop_toTopOf="@+id/year_of_establishment_id" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>