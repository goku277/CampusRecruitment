<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".Main.UpdateStudentsDetailsForm">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="39dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/university_name_text_id"
                android:layout_width="128dp"
                android:layout_height="67dp"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:text="University"
                android:textAlignment="center"
                android:textColor="#000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/university_name_id" />

            <TextView
                android:id="@+id/university_name_id"
                android:layout_width="216dp"
                android:layout_height="62dp"
                android:layout_marginTop="24dp"
                android:fontFamily="cursive"
                android:hint="University Name"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.623"
                app:layout_constraintStart_toEndOf="@+id/university_name_text_id"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/registration_number_id"
                android:layout_width="150dp"
                android:layout_height="62dp"
                android:layout_marginTop="48dp"
                android:fontFamily="cursive"
                android:gravity="center_horizontal"
                android:hint="Input Registration Number"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/university_name_text_id"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/university_name_id" />

            <Button
                android:id="@+id/get_details_btn_id"
                android:layout_width="111dp"
                android:layout_height="40dp"
                android:background="#FF5722"
                android:text="Get Details"
                android:textColor="#ffffff"
                app:layout_constraintBottom_toBottomOf="@+id/registration_number_id"
                app:layout_constraintEnd_toEndOf="@+id/university_name_id"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/registration_number_id"
                app:layout_constraintTop_toTopOf="@+id/registration_number_id"
                app:layout_constraintVertical_bias="0.363" />

            <EditText
                android:id="@+id/current_academic_id"
                android:layout_width="208dp"
                android:layout_height="57dp"
                android:layout_marginTop="36dp"
                android:fontFamily="cursive"
                android:hint="Current Academic"
                android:inputType="number"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/get_details_btn_id"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@+id/registration_number_id" />

            <EditText
                android:id="@+id/graduation_id"
                android:layout_width="207dp"
                android:layout_height="56dp"
                android:layout_marginTop="20dp"
                android:fontFamily="cursive"
                android:hint="Graduation"
                android:inputType="number"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/current_academic_id"
                app:layout_constraintHorizontal_bias="0.981"
                app:layout_constraintStart_toEndOf="@+id/textView8"
                app:layout_constraintTop_toBottomOf="@+id/current_academic_id" />

            <EditText
                android:id="@+id/ten_id"
                android:layout_width="209dp"
                android:layout_height="52dp"
                android:layout_marginTop="40dp"
                android:fontFamily="cursive"
                android:hint="Tenth Percentage"
                android:inputType="number"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.861"
                app:layout_constraintStart_toEndOf="@+id/textView9"
                app:layout_constraintTop_toBottomOf="@+id/graduation_id" />

            <EditText
                android:id="@+id/twelvth_id"
                android:layout_width="205dp"
                android:layout_height="48dp"
                android:layout_marginTop="24dp"
                android:fontFamily="cursive"
                android:hint="Twelvth Percentage"
                android:inputType="number"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/ten_id"
                app:layout_constraintHorizontal_bias="0.972"
                app:layout_constraintStart_toEndOf="@+id/textView10"
                app:layout_constraintTop_toBottomOf="@+id/ten_id" />

            <EditText
                android:id="@+id/keyskills_id"
                android:layout_width="202dp"
                android:layout_height="61dp"
                android:layout_marginTop="24dp"
                android:fontFamily="cursive"
                android:hint="KeySkills"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/twelvth_id"
                app:layout_constraintHorizontal_bias="0.933"
                app:layout_constraintStart_toEndOf="@+id/textView11"
                app:layout_constraintTop_toBottomOf="@+id/twelvth_id" />

            <EditText
                android:id="@+id/contact_id"
                android:layout_width="201dp"
                android:layout_height="63dp"
                android:layout_marginTop="24dp"
                android:fontFamily="cursive"
                android:hint="Contact"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/keyskills_id"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/textView12"
                app:layout_constraintTop_toBottomOf="@+id/keyskills_id" />

            <EditText
                android:id="@+id/student_name_id"
                android:layout_width="199dp"
                android:layout_height="71dp"
                android:layout_marginTop="24dp"
                android:fontFamily="cursive"
                android:hint="Student Name"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/contact_id"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/textView13"
                app:layout_constraintTop_toBottomOf="@+id/contact_id" />

            <EditText
                android:id="@+id/dob_id"
                android:layout_width="199dp"
                android:layout_height="74dp"
                android:layout_marginTop="16dp"
                android:fontFamily="cursive"
                android:hint="Date of Birth"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/student_name_id"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/textView14"
                app:layout_constraintTop_toBottomOf="@+id/student_name_id" />

            <EditText
                android:id="@+id/emailid"
                android:layout_width="199dp"
                android:layout_height="71dp"
                android:layout_marginTop="32dp"
                android:fontFamily="cursive"
                android:hint="Emailid"
                android:inputType="textEmailAddress"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/dob_id"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/textView15"
                app:layout_constraintTop_toBottomOf="@+id/dob_id" />

            <EditText
                android:id="@+id/semester_id"
                android:layout_width="199dp"
                android:layout_height="77dp"
                android:layout_marginTop="24dp"
                android:fontFamily="cursive"
                android:hint="Semester"
                android:inputType="number"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/emailid"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/textView16"
                app:layout_constraintTop_toBottomOf="@+id/emailid" />

            <EditText
                android:id="@+id/branch_id"
                android:layout_width="198dp"
                android:layout_height="75dp"
                android:layout_marginStart="48dp"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="32dp"
                android:fontFamily="cursive"
                android:hint="Branch"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/semester_id"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/textView17"
                app:layout_constraintTop_toBottomOf="@+id/semester_id" />

            <ImageView
                android:id="@+id/image_id"
                android:layout_width="97dp"
                android:layout_height="89dp"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/person"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/branch_id" />

            <Button
                android:id="@+id/change_pic_id"
                android:layout_width="132dp"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:background="#FF5722"
                android:text="Change Photo"
                android:textColor="#ffffff"
                app:layout_constraintEnd_toEndOf="@+id/keyskills_id"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/image_id"
                app:layout_constraintTop_toTopOf="@+id/image_id" />

            <Button
                android:id="@+id/update_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="#FF5722"
                android:text="Update"
                android:textColor="#ffffff"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_id" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="112dp"
                android:layout_height="35dp"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:gravity="center_horizontal"
                android:text="Current Academic"
                android:textAlignment="center"
                android:textColor="#000"
                app:layout_constraintBottom_toBottomOf="@+id/current_academic_id"
                app:layout_constraintStart_toStartOf="@+id/registration_number_id"
                app:layout_constraintTop_toTopOf="@+id/current_academic_id" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="82dp"
                android:layout_height="22dp"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:gravity="center_horizontal"
                android:text="Graduation"
                android:textAlignment="center"
                android:textColor="#000"
                app:layout_constraintBottom_toBottomOf="@+id/graduation_id"
                app:layout_constraintStart_toStartOf="@+id/textView7"
                app:layout_constraintTop_toTopOf="@+id/graduation_id" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="72dp"
                android:layout_height="32dp"
                android:gravity="center_horizontal"
                android:text="Tenth %"
                android:textAlignment="center"
                android:textColor="#000"
                app:layout_constraintBottom_toBottomOf="@+id/ten_id"
                app:layout_constraintStart_toStartOf="@+id/textView8"
                app:layout_constraintTop_toTopOf="@+id/ten_id" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="74dp"
                android:layout_height="26dp"
                android:gravity="center_horizontal"
                android:text="Twelvth %"
                android:textAlignment="center"
                android:textColor="#000"
                app:layout_constraintBottom_toBottomOf="@+id/twelvth_id"
                app:layout_constraintStart_toStartOf="@+id/textView9"
                app:layout_constraintTop_toTopOf="@+id/twelvth_id" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="68dp"
                android:layout_height="24dp"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:gravity="center_horizontal"
                android:text="Keyskills"
                android:textAlignment="center"
                android:textColor="#000"
                app:layout_constraintBottom_toBottomOf="@+id/keyskills_id"
                app:layout_constraintStart_toStartOf="@+id/textView10"
                app:layout_constraintTop_toTopOf="@+id/keyskills_id" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="103dp"
                android:layout_height="32dp"
                android:gravity="center_horizontal"
                android:text="Contact number"
                android:textAlignment="center"
                android:textColor="#000"
                app:layout_constraintBottom_toBottomOf="@+id/contact_id"
                app:layout_constraintStart_toStartOf="@+id/textView11"
                app:layout_constraintTop_toTopOf="@+id/contact_id" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="102dp"
                android:layout_height="32dp"
                android:gravity="center_horizontal"
                android:text="Student Name"
                android:textAlignment="center"
                android:textColor="#000"
                app:layout_constraintBottom_toBottomOf="@+id/student_name_id"
                app:layout_constraintStart_toStartOf="@+id/textView12"
                app:layout_constraintTop_toTopOf="@+id/student_name_id" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:gravity="center_horizontal"
                android:text="Date of Birth"
                android:textAlignment="center"
                android:textColor="#000"
                app:layout_constraintBottom_toBottomOf="@+id/dob_id"
                app:layout_constraintStart_toStartOf="@+id/textView13"
                app:layout_constraintTop_toTopOf="@+id/dob_id" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:gravity="center_horizontal"
                android:text="Emailid"
                android:textAlignment="center"
                android:textColor="#000"
                app:layout_constraintBottom_toBottomOf="@+id/emailid"
                app:layout_constraintStart_toStartOf="@+id/textView14"
                app:layout_constraintTop_toTopOf="@+id/emailid" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="Semester"
                android:textAlignment="center"
                android:textColor="#000"
                app:layout_constraintStart_toStartOf="@+id/textView15"
                app:layout_constraintTop_toTopOf="@+id/semester_id" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="47dp"
                android:layout_height="22dp"
                android:layout_marginTop="59dp"
                android:gravity="center_horizontal"
                android:text="Branch"
                android:textAlignment="center"
                android:textColor="#000"
                app:layout_constraintBottom_toBottomOf="@+id/branch_id"
                app:layout_constraintStart_toStartOf="@+id/textView16"
                app:layout_constraintTop_toBottomOf="@+id/semester_id" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>